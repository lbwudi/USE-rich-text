@import "./assets/iconfont.wxss";
@import "../common/lib/weui.wxss";

#editor{
  margin:5px;
  width: 100%;
  height: 100%;
  border: 30px solid #22C704;
}

.container {
  /* background-color: red; */
  position: absolute; 
  top: 0; 
  left: 0; 
  height: 80%;
  width: 100%;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #ECECEC;
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar,#upload{
  
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ECECEC;
  border-left: none;
  border-right: none;
}

#upload{
  bottom: 60px;
  background-color: rgb(154, 252, 7)
}
