            <text>{{desc_1_name}}</text>
        </view>
        <view class="d_content">
            <text>{{desc_1}}</text>
        </view>
    </view>
<view class="space"></view>
    <view>
        <view class="d_name">
            <text>{{desc_2_name}}</text>
        </view>
        <view class="d_content">
            <text>{{desc_2}}</text>
        </view>
    </view>
<view class="space"></view>
